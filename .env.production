# Production Environment Variables for Coolify Deployment
# Copy this file to .env in Coolify and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://pipes_user:CHANGE_THIS_PASSWORD@postgres:5432/pipes_collection
POSTGRES_USER=pipes_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=pipes_collection

# NextAuth Configuration
NEXTAUTH_URL=https://www.cachimbosetabacos.com.br
NEXTAUTH_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING

# Redis Configuration
REDIS_URL=redis://redis:6379

# MinIO S3-Compatible Storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=CHANGE_THIS_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_THIS_SECRET_KEY
MINIO_BUCKET=pipes-collection

# Application Configuration
NODE_ENV=production
PORT=3000

# Admin Configuration
ADMIN_EMAIL=admin@cachimbosetabacos.com.br
ADMIN_PASSWORD_HASH=CHANGE_THIS_BCRYPT_HASH

# Optional: Analytics
GOOGLE_ANALYTICS_ID=

# Optional: Email Configuration (for contact forms)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@cachimbosetabacos.com.br